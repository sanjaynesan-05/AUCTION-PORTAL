{
  "name": "ipl-auction-portal",
  "version": "2.0.0",
  "description": "IPL Auction Portal - Full Stack Application with React Frontend and FastAPI Backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "backend:dev": "cd backend && .\\venv\\Scripts\\python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:test": "cd backend && .\\venv\\Scripts\\pytest tests/test_api.py -v",
    "build": "npm run frontend:build",
    "preview": "npm run frontend:preview",
    "test": "npm run backend:test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.10.0"
  }
}
